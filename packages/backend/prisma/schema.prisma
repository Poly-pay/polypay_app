generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id         String   @id @default(cuid())
  commitment String   @unique
  name       String? // Global name for account
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  wallets               AccountWallet[]
  batchItems            BatchItem[]
  receivedNotifications Notification[]  @relation("ReceivedNotifications")
  sentNotifications     Notification[]  @relation("SentNotifications")
}

model Wallet {
  id        String   @id @default(cuid())
  address   String   @unique
  name      String
  threshold Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      AccountWallet[]
  transactions  Transaction[]
  addressGroups AddressGroup[]
  contacts      Contact[]
}

model AccountWallet {
  id        String   @id @default(cuid())
  accountId String
  walletId  String
  isCreator Boolean  @default(false)
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id])
  wallet  Wallet  @relation(fields: [walletId], references: [id])

  @@unique([accountId, walletId])
}

model Transaction {
  id     String   @id @default(cuid())
  txId   Int      @unique @default(autoincrement())
  type   TxType
  status TxStatus @default(PENDING)
  nonce  Int // unique per wallet

  // Transfer (ETH only)
  to           String?
  value        String?
  tokenAddress String? // null for ETH, address for ERC20 

  walletAddress String
  wallet        Wallet @relation(fields: [walletAddress], references: [address])

  // Link to contact for display name (optional)
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)

  // Add/Remove Signer
  signerCommitment String?

  // Set Threshold
  newThreshold Int?

  // Batch data (JSON string of recipients + amounts)
  batchData String?

  // Metadata
  createdBy    String // commitment initial
  threshold    Int // approval threshold at the time of creation
  totalSigners Int // total signers at the time of creation

  // Execution
  txHash     String?
  executedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes Vote[]

  @@unique([walletAddress, nonce])
  @@index([status])
  @@index([walletAddress])
  @@index([contactId])
}

model ReservedNonce {
  id            String   @id @default(cuid())
  walletAddress String
  nonce         Int
  expiresAt     DateTime
  createdAt     DateTime @default(now())

  @@unique([walletAddress, nonce])
}

model Vote {
  id              String   @id @default(cuid())
  txId            Int
  voterCommitment String
  voteType        VoteType

  // ZK Proof (only APPROVE)
  nullifier   String? // This unique on-chain, but on our backend, it can be duplicate across tx (because txs can have same nonce)
  jobId       String?      @unique
  proofStatus ProofStatus?

  // Aggregation data
  aggregationId    String?
  domainId         Int?         @default(175)
  merkleProof      String[]
  leafCount        Int?
  leafIndex        Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transaction Transaction @relation(fields: [txId], references: [txId])

  @@unique([txId, voterCommitment])
  @@index([txId])
  @@index([proofStatus])
}

model BatchItem {
  id           String  @id @default(cuid())
  accountId    String
  contactId    String?
  recipient    String
  amount       String
  tokenAddress String? // null for ETH, address for ERC20 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  contact Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)

  @@index([accountId])
}

model AddressGroup {
  id        String   @id @default(cuid())
  walletId  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet   Wallet         @relation(fields: [walletId], references: [id], onDelete: Cascade)
  contacts ContactGroup[]

  @@unique([walletId, name])
  @@map("address_groups")
}

model Contact {
  id        String   @id @default(uuid())
  walletId  String
  name      String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet       Wallet         @relation(fields: [walletId], references: [id], onDelete: Cascade)
  groups       ContactGroup[]
  transactions Transaction[]
  batchItems   BatchItem[]

  @@unique([walletId, name])
  @@unique([walletId, address])
  @@map("contacts")
}

model ContactGroup {
  contactId String
  groupId   String

  contact Contact      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  group   AddressGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([contactId, groupId])
  @@map("contact_groups")
}

model Notification {
  id String @id @default(cuid())

  recipientId String
  recipient   Account @relation("ReceivedNotifications", fields: [recipientId], references: [id], onDelete: Cascade)

  senderId String
  sender   Account @relation("SentNotifications", fields: [senderId], references: [id], onDelete: Cascade)

  type      NotificationType
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([recipientId])
  @@index([senderId])
  @@index([read])
}

enum TxType {
  TRANSFER
  ADD_SIGNER
  REMOVE_SIGNER
  SET_THRESHOLD
  BATCH
}

enum TxStatus {
  PENDING
  EXECUTING // DEPRECATED: No longer needed. Check realtime on frontend instead
  EXECUTED
  OUTDATED // DEPRECATED: No longer needed with txId as nonce. Kept for backward compatibility.
  FAILED
}

enum VoteType {
  APPROVE
  DENY
}

enum ProofStatus {
  PENDING
  AGGREGATED
  FAILED
}

enum NotificationType {
  COMMITMENT_RECEIVED
}
