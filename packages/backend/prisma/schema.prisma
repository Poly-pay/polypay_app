generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String          @id @default(cuid())
  commitment            String          @unique
  createdAt             DateTime        @default(now()) @map("created_at")
  updatedAt             DateTime        @updatedAt @map("updated_at")
  accounts              AccountSigner[]
  batchItems            BatchItem[]
  receivedNotifications Notification[]  @relation("ReceivedNotifications")
  sentNotifications     Notification[]  @relation("SentNotifications")

  @@map("users")
}

model Account {
  id            String          @id @default(cuid())
  address       String          @unique
  name          String
  threshold     Int
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  signers       AccountSigner[]
  contactGroups ContactGroup[]
  contacts      Contact[]
  transactions  Transaction[]

  @@map("accounts")
}

model AccountSigner {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  accountId   String   @map("account_id")
  isCreator   Boolean  @default(false) @map("is_creator")
  displayName String?  @map("display_name")
  createdAt   DateTime @default(now()) @map("created_at")
  account     Account  @relation(fields: [accountId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, accountId])
  @@map("account_signers")
}

model Transaction {
  id             String    @id @default(cuid())
  txId           Int       @unique @default(autoincrement()) @map("tx_id")
  type           TxType
  status         TxStatus  @default(PENDING)
  nonce          Int
  to             String?
  value          String?
  tokenAddress   String?   @map("token_address")
  accountAddress String    @map("account_address")
  contactId      String?   @map("contact_id")
  signerData     String?   @map("signer_data")
  newThreshold   Int?      @map("new_threshold")
  batchData      String?   @map("batch_data")
  createdBy      String    @map("created_by")
  threshold      Int
  txHash         String?   @map("tx_hash")
  executedAt     DateTime? @map("executed_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  account        Account   @relation(fields: [accountAddress], references: [address])
  contact        Contact?  @relation(fields: [contactId], references: [id])
  votes          Vote[]

  @@unique([accountAddress, nonce])
  @@index([status])
  @@index([accountAddress])
  @@index([contactId])
  @@map("transactions")
}

model ReservedNonce {
  id             String   @id @default(cuid())
  accountAddress String   @map("account_address")
  nonce          Int
  expiresAt      DateTime @map("expires_at")
  createdAt      DateTime @default(now()) @map("created_at")

  @@unique([accountAddress, nonce])
  @@map("reserved_nonces")
}

model Vote {
  id              String       @id @default(cuid())
  txId            Int          @map("tx_id")
  voterCommitment String       @map("voter_commitment")
  voteType        VoteType     @map("vote_type")
  nullifier       String?
  jobId           String?      @unique @map("job_id")
  proofStatus     ProofStatus? @map("proof_status")
  aggregationId   String?      @map("aggregation_id")
  domainId        Int?         @default(175) @map("domain_id")
  merkleProof     String[]     @map("merkle_proof")
  leafCount       Int?         @map("leaf_count")
  leafIndex       Int?         @map("leaf_index")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  transaction     Transaction  @relation(fields: [txId], references: [txId])

  @@unique([txId, voterCommitment])
  @@index([txId])
  @@index([proofStatus])
  @@map("votes")
}

model BatchItem {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  contactId    String?  @map("contact_id")
  recipient    String
  amount       String
  tokenAddress String?  @map("token_address")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  contact      Contact? @relation(fields: [contactId], references: [id])
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("batch_items")
}

model ContactGroup {
  id        String              @id @default(cuid())
  accountId String              @map("account_id")
  name      String
  createdAt DateTime            @default(now()) @map("created_at")
  updatedAt DateTime            @updatedAt @map("updated_at")
  contacts  ContactGroupEntry[]
  account   Account             @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, name])
  @@map("contact_groups")
}

model Contact {
  id           String              @id @default(uuid())
  accountId    String              @map("account_id")
  name         String
  address      String
  createdAt    DateTime            @default(now()) @map("created_at")
  updatedAt    DateTime            @updatedAt @map("updated_at")
  batchItems   BatchItem[]
  groups       ContactGroupEntry[]
  account      Account             @relation(fields: [accountId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([accountId, name])
  @@unique([accountId, address])
  @@map("contacts")
}

model ContactGroupEntry {
  contactId String       @map("contact_id")
  groupId   String       @map("group_id")
  contact   Contact      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  group     ContactGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([contactId, groupId])
  @@map("contact_group_entries")
}

model Notification {
  id          String           @id @default(cuid())
  recipientId String           @map("recipient_id")
  senderId    String           @map("sender_id")
  type        NotificationType
  read        Boolean          @default(false)
  createdAt   DateTime         @default(now()) @map("created_at")
  recipient   User             @relation("ReceivedNotifications", fields: [recipientId], references: [id], onDelete: Cascade)
  sender      User             @relation("SentNotifications", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([recipientId])
  @@index([senderId])
  @@index([read])
  @@map("notifications")
}

model FeatureRequest {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("feature_requests")
}

enum TxType {
  TRANSFER
  ADD_SIGNER
  REMOVE_SIGNER
  SET_THRESHOLD
  BATCH
}

enum TxStatus {
  PENDING
  EXECUTING
  EXECUTED
  OUTDATED
  FAILED
}

enum VoteType {
  APPROVE
  DENY
}

enum ProofStatus {
  PENDING
  AGGREGATED
  FAILED
}

enum NotificationType {
  COMMITMENT_RECEIVED
}
