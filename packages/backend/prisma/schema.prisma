generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id          String   @id @default(cuid())
  commitment  String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  wallets     AccountWallet[]
}

model Wallet {
  id          String   @id @default(cuid())
  address     String   @unique
  name        String
  threshold   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  accounts      AccountWallet[]
  transactions  Transaction[]
}

model AccountWallet {
  id          String   @id @default(cuid())
  accountId   String
  walletId    String
  isCreator   Boolean  @default(false)
  createdAt   DateTime @default(now())

  account     Account  @relation(fields: [accountId], references: [id])
  wallet      Wallet   @relation(fields: [walletId], references: [id])

  @@unique([accountId, walletId])
}


model Transaction {
  id                 String      @id @default(cuid())
  txId               Int         @unique @default(autoincrement())
  type               TxType
  status             TxStatus    @default(PENDING)
  nonce              Int

  // Transfer (ETH only)
  to                 String?
  value              String?

  walletAddress      String
  wallet             Wallet   @relation(fields: [walletAddress], references: [address])

  // Add/Remove Signer
  signerCommitment   String?

  // Set Threshold
  newThreshold       Int?

  // Metadata
  createdBy          String      // commitment initial
  threshold          Int         // approval threshold at the time of creation

  // Execution
  txHash             String?
  executedAt         DateTime?

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  votes              Vote[]

  @@index([status])
  @@index([walletAddress])
}

model Vote {
  id               String       @id @default(cuid())
  txId             Int
  voterCommitment  String
  voteType         VoteType

  // ZK Proof (only APPROVE)
  nullifier        String?      @unique
  jobId            String?      @unique
  proofStatus      ProofStatus?

  // Aggregation data
  aggregationId    String?
  domainId         Int?         @default(0)
  merkleProof      String[]
  leafCount        Int?
  leafIndex        Int?

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  transaction      Transaction  @relation(fields: [txId], references: [txId])

  @@unique([txId, voterCommitment])
  @@index([txId])
  @@index([proofStatus])
}

enum TxType {
  TRANSFER
  ADD_SIGNER
  REMOVE_SIGNER
  SET_THRESHOLD
}

enum TxStatus {
  PENDING
  EXECUTING
  EXECUTED
  OUTDATED
  FAILED
}

enum VoteType {
  APPROVE
  DENY
}

enum ProofStatus {
  PENDING
  AGGREGATED
  FAILED
}