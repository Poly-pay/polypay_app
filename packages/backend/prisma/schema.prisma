generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id                 String      @id @default(cuid())
  txId               Int         @unique
  type               TxType
  status             TxStatus    @default(PENDING)

  // Transfer (ETH only)
  to                 String?
  value              String?

  // Add/Remove Signer
  signerCommitment   String?

  // Set Threshold
  newThreshold       Int?

  // Metadata
  createdBy          String      // commitment initial
  walletAddress      String
  threshold          Int         // approval threshold at the time of creation

  // Execution
  txHash             String?
  executedAt         DateTime?

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  votes              Vote[]

  @@index([status])
  @@index([walletAddress])
}

model Vote {
  id               String       @id @default(cuid())
  txId             Int
  voterCommitment  String
  voteType         VoteType

  // ZK Proof (only APPROVE)
  nullifier        String?      @unique
  jobId            String?      @unique
  proofStatus      ProofStatus?

  // Aggregation data
  aggregationId    String?
  domainId         Int?         @default(0)
  merkleProof      String[]
  leafCount        Int?
  leafIndex        Int?

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  transaction      Transaction  @relation(fields: [txId], references: [txId])

  @@unique([txId, voterCommitment])
  @@index([txId])
  @@index([proofStatus])
}

enum TxType {
  TRANSFER
  ADD_SIGNER
  REMOVE_SIGNER
  SET_THRESHOLD
}

enum TxStatus {
  PENDING
  EXECUTING
  EXECUTED
  FAILED
}

enum VoteType {
  APPROVE
  DENY
}

enum ProofStatus {
  PENDING
  AGGREGATED
  FAILED
}